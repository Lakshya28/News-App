<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="180dp"
    android:layout_height="215dp"
    android:elevation="30dp"
    android:layout_margin="2.5dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="20dp"
    app:cardElevation="3dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/smallArticleImage"
            android:scaleType="centerCrop"
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:src="@drawable/madhyapradesh" />

        <TextView
            android:id="@+id/smallArticleHeadline"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="3dp"
            android:maxLines="4"
            android:ellipsize="end"
            android:paddingBottom="3dp"
            android:paddingStart="5dp"
            android:text="India America ,ahdfk adhkerica, blr asn ashkj ajkadf ahdfkadhk ahdfkj afhhdfdgjshgfsdhgfjsdhgfjhsgd hsdfsfgfjs"
            android:textSize="12sp" />
    </LinearLayout>
</androidx.cardview.widget.CardView>